<Window x:Class="FocusVoucherSystem.Views.CompanySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Voucher System - Company Selection" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowState="Normal">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Focus Voucher System" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Select a company to continue or create a new one" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Existing Companies Section -->
        <TextBlock Grid.Row="1" 
                   Text="Existing Companies:" 
                   FontWeight="Bold" 
                   FontSize="16"/>

        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Margin="0,5,0,15">
            <ListBox Name="CompaniesListBox" 
                     SelectionMode="Single"
                     MinHeight="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding FinancialYearDisplay}" 
                                       FontSize="12" 
                                       Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="10"/>
                        <Style.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBox">
                                            <Border BorderBrush="LightGray" BorderThickness="1" Background="White">
                                                <TextBlock Text="No companies found. Create a new company to get started." 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"
                                                           FontStyle="Italic" 
                                                           Foreground="Gray"
                                                           TextWrapping="Wrap"
                                                           Margin="20"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>
            </ListBox>
        </Border>

        <!-- Status Message -->
        <TextBlock Grid.Row="3" 
                   Name="StatusTextBlock"
                   Text="Ready" 
                   Foreground="Blue" 
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="SelectCompanyButton" 
                    Content="Select Company" 
                    IsDefault="True"
                    Click="SelectCompanyButton_Click"
                    MinWidth="130"/>
            
            <Button Name="CreateCompanyButton" 
                    Content="Create New Company" 
                    Click="CreateCompanyButton_Click"
                    MinWidth="130"/>
            
            <Button Name="DeleteCompanyButton"
                    Content="Delete Company"
                    Click="DeleteCompanyButton_Click"
                    MinWidth="130"/>
            
            <Button Name="ExitButton" 
                    Content="Exit" 
                    IsCancel="True"
                    Click="ExitButton_Click"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
